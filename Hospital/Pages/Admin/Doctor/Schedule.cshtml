@page
@using Hospital.Utilities
@model Hospital.Pages.Admin.Doctor.ScheduleModel

@{
    ViewData["Title"] = "زمان بندی دکتر";
    Layout = "~/Pages/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">

            <p> زمان بندی دکتر : <span> @Model.DoctorFullName </span> </p>

        </div>
        <div class="card-content">
            <div class="card-body card-dashboard table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.input[0].Schedule.UserId)
                            </th>
                            <th>روز ویزیت</th>
                            <th>
                                @Html.DisplayNameFor(model => model.input[0].Schedule.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.input[0].Schedule.EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.input[0].Schedule.ExtraMinute)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.input[0].Schedule.Doctor)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.input)
                        {
                            <tr>
                                <td>
                                    @(!String.IsNullOrEmpty(item.FullName) ? item.FullName : "---")
                                </td>
                                <td>
                                    @item.Schedule.StartDate.ToShamsiDate()
                                </td>
                                <td>
                                    @item.Schedule.StartDate.ToShamsiTime()
                                </td>
                                <td>
                                    @item.Schedule.EndDate.ToShamsiTime()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Schedule.ExtraMinute)
                                </td>
                                <td>
                                    @(Model.DoctorFullName)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#NavDoctor").addClass("active");
        });
    </script>
}
