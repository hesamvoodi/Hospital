@page
@model Hospital.Pages.Admin.DoctorGroup.IndexModel

@{
    ViewData["Title"] = "لیست تخصص‌ها";
    Layout = "Shared/_AdminPanelLayout";
}


<div class="col-12">
    <div class="card">
        <div class="card-content">
            <div id="IndexRefresh">
                <div class="card-body card-dashboard table-responsive">
                    @if (Model.DoctorGroup.Count > 0)
                    {
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th> تخصص ها </th>
                                    <th style="max-width: 100px;"> دستورات </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DoctorGroup)
                                {
                                    <tr>
                                        <td> @item.Name </td>
                                        <td>
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="success p-0" data-original-title="" title="">
                                                <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                            </a>

                                            @if (item.Doctor.Count == 0)
                                            {
                                                <a class="danger p-0">
                                                    <i class="ft-x font-medium-3 mr-2" onclick="Deletee('/GroupDelete?id=@item.Id')"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            آیتمی برای نمایش موجود نمی‌باشد. برای اضافه کردن روی
                            <a asp-page="create">این لینک</a> کلیک کنید.
                        </div>
                    }
                    <div class="addnewdoc">
                        <a type="button" name="adddoc" class="btn btn-info"
                           asp-page="create">
                            <span class="icon-plus"></span>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#NavDoctorGroup").addClass("active");
        });
    </script>
}