@using Hospital.Utilities
<!DOCTYPE html>

<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords"
          content="HTML5,CSS3,HTML,Template,multi-page,Medsev - Healthcare Clinic &amp; Doctor HTML Template">
    <meta name="description" content="Medsev - Healthcare Clinic &amp; Doctor HTML Template">
    <meta name="author" content="Barat Hadian">
    <link rel="stylesheet" href="~/MainAssets/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/meanmenu.css">
    <link rel="stylesheet" href="~/MainAssets/css/icofont.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/slick.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/slick-theme.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/magnific-popup.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/animate.css">
    <link rel="stylesheet" href="~/MainAssets/css/odometer.min.css">
    <link rel="stylesheet" href="~/MainAssets/css/style.css">
    <link rel="stylesheet" href="~/MainAssets/css/responsive.css">
    <link rel="stylesheet" href="~/MainAssets/css/rtl.css">
    <title>بیمارستان</title>
    <link rel="icon" type="image/png" href="MainAssets/img/favicon.png">
    <meta http-equiv="imagetoolbar" content="no">
    <style type="text/css">
        input, textarea {
            -webkit-touch-callout: default;
            -webkit-user-select: auto;
            -khtml-user-select: auto;
            -moz-user-select: text;
            -ms-user-select: text;
            user-select: text
        }

        * {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: -moz-none;
            -ms-user-select: none;
            user-select: none
        }
    </style>
    <style type="text/css" media="print">
        body {
            display: none
        }
    </style>
    @await RenderSectionAsync("Styles", false)
</head>

<body>
    <!-- Preloader -->
    <div class="loader" style="display: none;">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner">
                    <div class="double-bounce1"></div>
                    <div class="double-bounce2"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header Top -->
    <div class="header-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-9 col-lg-9">
                    <div class="header-top-item">
                        <div class="header-top-left">
                            <ul>
                                <li>
                                    <a href="tel:07554332322"> <i class="icofont-ui-call"></i> تلفن: 07554332322 </a>
                                </li>
                                <li>
                                    <a href="mailto:hello@medsev.com">
                                        hello@medsev.com <i class="icofont-ui-message"></i>
                                    </a>
                                </li>
                                <li> <i class="icofont-location-pin"></i> ایران ، استان تهران ، میدان آزادی </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 col-lg-3">
                    <div class="header-top-item">
                        <div class="header-top-right">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">ثبت نام</a>
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">ورود</a>
                            }
                            else
                            {
                        <span>
                            @if (User.IsInRole(SD.PatientEndUser))
                            {
                                @("کاربر")
                            }
                            else if (User.IsInRole(SD.DoctorEndUser))
                            {
                                @("دکتر")
                            }
                            else
                            {
                                @("ادمین")
                            }
                            @User.Identity.Name
                        </span>
                                <form class="d-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-primary btn-sm">خروج</button>
                                </form>
                                if (User.IsInRole(SD.PatientEndUser))
                                {
                                    <a asp-page="/UserPanel/Orderlist" class="btn btn-outline-primary btn-sm">پنل کاربری</a>
                                }
                                else if (User.IsInRole(SD.DoctorEndUser))
                                {
                                    <a asp-page="/DoctorPanel/ManageTime/Index" class="btn btn-outline-primary btn-sm">پنل دکتر</a>
                                }
                                else
                                {
                                    <a asp-page="/Admin/DoctorGroup/Index" class="btn btn-outline-primary btn-sm">پنل ادمین</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Header Top -->
    <!-- Start Navbar Area -->
    <div class="navbar-area sticky-top">
        <!-- Menu For Mobile Device -->
        <div class="mobile-nav">
            <a asp-page="/Index" class="logo"> <img src="MainAssets/img/logo-two.png" alt="Logo"> </a>
        </div> <!-- Menu For Desktop Device -->
        <div class="main-nav">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand" asp-page="/Index">
                        <img src="MainAssets/img/logo.png" alt="Logo">
                    </a>
                    <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent" style="display: block;">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-page="/Index" id="NavHome" class="nav-link">خانه</a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/DoctorList" id="NavDoctorList" class="nav-link">لیست پزشکان</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="" class="nav-link">درباره ما</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Navbar Area -->

    @RenderBody()

    <!-- Footer -->
    <footer class="pb-70">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-lg-6">
                    <div class="footer-item">
                        <div class="footer-contact">
                            <h3>تماس با ما</h3>
                            <ul>
                                <li>
                                    <i class="icofont-ui-message"></i> <a href="mailto:info@medisev.com">info@medisev.com</a> <a href="mailto:hello@medisev.com">hello@medisev.com</a>
                                </li>
                                <li>
                                    <i class="icofont-stock-mobile"></i> <a href="tel:07554332322">
                                        تلفن:
                                        07554332322
                                    </a> <a href="tel:236256256365">تلفن: 236256256365</a>
                                </li>
                                <li>
                                    <i class="icofont-location-pin"></i> ایران ، استان تهران ، میدان آزادی ، خیابان 9
                                    شرقی
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-6">
                    <div class="footer-item">
                        <div class="footer-quick">
                            <h3>خدمات ما</h3>
                            <ul>
                                <li> <a href="#">مراقبت از دندان</a> </li>
                                <li> <a href="#">قلب و عروق</a> </li>
                                <li> <a href="#">درمان پزشکی</a> </li>
                                <li> <a href="#">ماساژ درمانی</a> </li>
                                <li> <a href="#">خدمات آمبولانس</a> </li>
                                <li> <a href="#">دارو</a> </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <!-- Copyright -->
    <div class="copyright-area">
        <div class="container">
            <div class="copyright-item">
                <p>
                    کپی رایت © 1400. تمام حقوق قالب محفوظ است. طراحی توسط <a href="https://www.rtl-theme.com/author/barat/?aff=barat" target="_blank">Barat Hadian</a>
                </p>
            </div>
        </div>
    </div>
    <!-- End Copyright -->
    <script src="/MainAssets/js/jquery.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/popper.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/owl.carousel.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/jquery.meanmenu.js" type="text/javascript"></script>
    <script src="/MainAssets/js/slick.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/jquery.magnific-popup.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/wow.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/jquery.ajaxchimp.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/form-validator.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/contact-form-script.js" type="text/javascript"></script>
    <script src="/MainAssets/js/odometer.min.js" type="text/javascript"></script>
    <script src="/MainAssets/js/jquery.appear.min.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", false)
    <div id="toTop" class="back-to-top-btn" style="display: none;">
        <i class="icofont-hand-drawn-up"></i>
    </div>
</body>

</html>
